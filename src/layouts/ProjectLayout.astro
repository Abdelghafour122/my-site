---
import BaseHead from "@components/BaseHead.astro";
import Header from "@components/Header.astro";
import Footer from "@components/Footer.astro";
import type { CollectionEntry } from "astro:content";
import FormattedDate from "@components/FormattedDate.astro";

type Props = CollectionEntry<"projects">["data"];

const { title, description, pubDate, updatedDate, heroImage, link } =
  Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <BaseHead title={title} description={description} />
  </head>
  <body>
    <Header />
    <main class="w-[calc(100%_-_2em)] max-w-full">
      <article>
        <div class="hero-image">
          {
            heroImage && (
              <img
                width={1020}
                height={510}
                src={heroImage}
                alt="blog-post-hero-img"
                class="block my-0 mx-auto rounded-xl shadow-2xl"
              />
            )
          }
        </div>
        <div
          class="prose w-[720px] max-w-[calc(100%_-_2em)] m-auto p-6 text-[rgb(var(--gray-dark))]"
        >
          <div class="title mb-5 py-4 px-0 text-center leading-none">
            <div class="date mb-6 text-[rgb(var(--gray))]">
              <FormattedDate date={pubDate} />
              {
                updatedDate && (
                  <div class="last-updated-on italic">
                    Last updated on <FormattedDate date={updatedDate} />
                  </div>
                )
              }
            </div>
            <div
              class="link flex items-center justify-center gap-3 text-[rgb(var(--black))] font-semibold"
            >
              See demo: <a
                href={link}
                class="underline text-[rgb(var(--accent))] italic">{link}</a
              >
            </div>
            <h1 class="mb-6">{title}</h1>
            <hr />
          </div>
          <slot />
        </div>
      </article>
    </main>
    <Footer />
  </body>
</html>
