---
import { Icon } from "astro-icon/components";
import { IconEnum } from "@/consts";

type Props = {
  srText: string;
  iconName: IconEnum;
  link: string;
};

const { iconName, srText, link } = Astro.props;
---

<a
  href={link}
  target="_blank"
  class="text-stone-800 dark:text-stone-200 dark:hover:text-[var(--accent)] transition-colors"
>
  <span class="sr-only">{srText}</span>
  <Icon name={iconName} size={30} title={iconName} />
</a>
